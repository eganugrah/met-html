mixin pageHeader(title, breadItems, last)
	.page-header 
		.container-fluid
			.row 
				.col-lg-4
					h1= title
				.col-lg-8
					ol.breadcrumb
						each item in breadItems
							li.breadcrumb-item
								a(href=item.link)= item.name

						if last
							li.breadcrumb-item
								span.breadcrumb-link-current= last
						else

mixin tim(contents)
	each item in contents
		.grid-item 
			.avatar.avatar-lg 
				img(src=item.img, alt=name)
			.tim-name=item.name
			if item.title
				.tim-title=item.title
			if item.subtitle
				.tim-subtitle=item.subtitle
			ul.kontak-socmed.small.mt-2
				li 
					a(href="https://twitter.com" target="_blank")
						i.fa.fa-twitter 
				li 
					a(href="https://linkedin.com" target="_blank")
						i.fa.fa-linkedin 
				li 
					a(href="mailto:info@amsi.or.id")
						i.fa.fa-envelope 

mixin kabar(contents)
	each item in contents
		.col-lg-3.col-md-6
			.card
				.card-label.blue 
					a(href=item.catLink)=item.cat
				.card-image.square-ratio
					a(href=item.link)
						img(src=item.image).card-img-top
				.card-body
					h5.card-title 
						a(href=item.link)=item.title
					.card-date=item.date
					.card-text=item.desc

