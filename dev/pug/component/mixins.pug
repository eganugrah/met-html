mixin program(contents)
	each item in contents
		.col-lg-4.col-md-6
			.card.card-program 
				.card-top 
					.card-image
						a(href=item.link)
							img(src=item.image).card-img-top
					h5.card-title 
						a(href=item.link)
							span=item.title
				.card-body
					.list-info 
						.list-key Periode
						.list-value 29 Nov - 3 Des 2022
					.list-info 
						.list-key Pendonor
						.list-value AIPTIS
					.list-info 
						.list-key Target
						.list-value Target Sasaran
					.list-info 
						.list-key Anggaran
						.list-value Rp 1,234,000,000

mixin mitra(contents)
	each item in contents
		.col-lg-3.col-md-4.col-6.load-item
			a(href=item.link target="_blank").card.card-mitra
				.card-image.square-ratio
					img(src=item.image).card-img-top
				.card-body.py-2.px-2
					h5.card-title=item.title